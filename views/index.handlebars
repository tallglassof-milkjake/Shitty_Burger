<div class="container">

    {{!-- Heading Section --}}
        <div class="row text-center">
            <div class="col">
                <img src="/img/burger.png" class="img-fluid big-burger w-50" alt="Juicy Burger">

                <h1 class="display-2">Eat The Burger</h1>

                <h2 class="display-4">The Burgers</h2>
            </div>
        </div>   
    
    {{!-- Input Section/Create Burger --}}
    <section class="inputform d-flex justify-content-center">
        <form id="newBurgerForm">
            <div class="form-group text-center">
                {{!-- New Burger Form --}}
                <div>
                    <label for="newBurger">Create a new Burger</label>
                    <input type="text" id="newBurger" class="form-control" aria-describedby="create_burger">
                    <small id="create_burger" class="form-text text-muted">Name it whatever you'd like!</small>
                </div>
                {{!-- Submit Button --}}
                <div class="text-center">
                    <button id="submitBTN" type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
    
            
            
        </form>
    </section>

    {{!-- Output/Burgerlist and show un eaten/eaten burgeres --}}
    <section class="outputlist justify-content-center">
        <div class="row">
            <div class="col-6">
                <table class="table w-100" id="botDevoured">
                    {{#each burgers}}
                        {{#unless devoured}}

                            {{>burgers/burger-block devoured=true}}

                        {{/unless}}
                    {{/each}}
                </table>
            </div>
            <div class="col-6">
                <table class="table w-100" id="isDevoured">
                    {{#each burgers}}
                        {{#if devoured}}

                            {{>burgers/burger-block devoured=false}}
                            
                        {{/if}}
                    {{/each}}
                </table>
            </div>
        </div>
    </section>


    
    

</div>
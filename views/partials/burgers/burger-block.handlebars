<div class="card" style="width: 18rem;">
  
    <div class="card-body">
        <h5 class="card-title">{{burger_name}}</h5>
        
        <a class="btn btn-outline-success" id="changeEaten" data-id="{{id}}" data-newDevoured="{{devoured}}">
            {{#if devoured}}Devour!
            {{else}}Try Again!
            {{/if}}
        </a>
    </div>
</div>

